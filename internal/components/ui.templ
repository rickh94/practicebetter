type BreadcrumbInfo struct {
	Label  string
	Href   string
	Active bool
}

templ Breadcrumb(bc []BreadcrumbInfo) {
	<nav aria-label="Breadcrumb" class="block">
		<ul class="flex flex-grow-0 justify-around py-2 px-4 rounded-xl sm:justify-start sm:text-xl bg-neutral-900/10">
			for i, b := range bc {
				<li
 					class={ "flex items-center", templ.KV("text-neutral-900", b.Active), templ.KV("text-neutral-900/50", !b.Active) }
 					if b.Active {
						aria-current="true"
					}
				>
					@HxLink("", b.Href, "#main-content") {
						{ b.Label }
					}
				</li>
				if i != len(bc) - 1 {
					<span class="inline-block text-neutral-900/50">
						@heroicons.IconChevronRightSolid("w-8 h-8")
					</span>
				}
			}
		</ul>
	</nav>
}

